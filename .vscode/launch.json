{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++ Runner: Debug Session",
            "type": "cppdbg",
            "request": "launch",
            "args": [
                "-Wall",
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}/include",
                "-I${workspaceFolder}/src/vendor",
                "-I${workspaceFolder}/src/figures",
                "-L${workspaceFolder}/lib",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/glad.c",
                "${workspaceFolder}/src/vendor/stb/stb_image.cpp",
                "${workspaceFolder}/src/figures/Square.cpp",
                "-lglfw3",
                "-lgdi32",
                "-o",
                "${workspaceFolder}/glfw.exe"
            ],
            "stopAtEntry": false,
            "externalConsole": true,
            "cwd": "c:/Users/Usuario/Desktop/PruebaOpenGL",
            "program": "${workspaceFolder}/glfw.exe",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "C/C++: g++.exe build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/glfw.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "C:/TDM-GCC-64/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\TDM-GCC-64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compilar proyecto"
        }
    ]
}